<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92A3D2">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/AllAnimalsBtn"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginStart="224dp"
        android:layout_marginTop="148dp"
        android:background="@color/buttonColor"
        android:text="All Animals"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/SpecificAnimalBtn"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="48dp"
        android:background="@color/buttonColor"
        android:text="Specific Animal"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintStart_toStartOf="@+id/AllAnimalsBtn"
        app:layout_constraintTop_toBottomOf="@id/AllAnimalsBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>